package ua.nure.zharkov.Task1;

public class Part4 {

	public static long RowSum(int n) {
		long result = 1;
		long factorial = 1;
		for (int i = 2; i <= n; ++i) {
			if ((i & 1) == 1) {
				result += factorial;
			} else {
				result -= factorial;
			}
			factorial *= i;
		}
		return result;
	}

	public static void main(int... args) {
		if (args.length == 0) {
			System.out.print("Function got no parameters");
		} else {
			System.out.print("Executing program Part4: \n" + RowSum(args[0]) + "\n");
		}
	}

}
